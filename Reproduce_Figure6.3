import numpy as np
import matplotlib.pyplot as plt


"""
Reproduce Figure 6.3 by ploting functions
with parameter t of different values.

Here y = exp(-t) * sin(2pi(x-0.5t))
"""

#set variable x as an array
x = np.arange(0,2.01,0.01)

#t_0 = 0 condition, set variable y_0
y_0 = np.sin(2*np.pi*x)
#t_1 = 0.5 condition, set variable y_1
y_1 = np.exp(-0.5)*np.sin(2*np.pi*(x-0.25))
#t_2 = 1.0 condition, set variable y_2
y_2 = np.exp(-1.0)*np.sin(2*np.pi*(x-0.5))

plt.figure()
plt.plot(x,y_0,label = "time = 0.0",color = 'black')
plt.plot(x,y_1,label = "time = 0.5",color = 'blue',linestyle = '-.')
plt.plot(x,y_2,label = "time = 1.0",color = 'red',linestyle = '--')
plt.xlim([0,2])
plt.ylim([-1.5,1.5])
plt.xticks(np.arange(0,2.5,0.5))
plt.yticks(np.arange(-1.5,2,0.5))
plt.text(0.9,1.2,"U=0.5")
plt.text(0.35,0.85,"time=0.0")
plt.text(0.55,0.6,"time=0.0")
plt.text(0.75,0.5,"time=0.0")
plt.rcParams['figure.figsize'] = (4.5, 4.0) 
plt.show()
